<% provide(:title, "Quiz") %>

<section
  class="flex w-full items-center justify-center min-h-screen bg-gradient-to-br from-blue-50 to-purple-50 p-4">
  <div class="max-w-xl w-full bg-white rounded-2xl shadow-lg p-8 flex flex-col">
    <!-- Title -->
    <h1 class="text-4xl font-extrabold text-gray-800 text-center mb-6">
      <%= yield :title %>
    </h1>

    <!-- Quiz Entry Form -->
    <%= form_with url: quizs_path, method: :post, class: "flex flex-col space-y-4" do |f| %>
      <div>
        <%= f.label "Your Name", class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.text_field :name, placeholder: "Enter your name",
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" %>
      </div>

      <div>
        <%= f.label "Select Quiz", class: "block text-gray-700 font-semibold mb-1"  %>
        <%= f.text_area "question", class:"w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 h-72" %>
      </div>

      <%= f.submit "Start Quiz",
          class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-lg transition-colors" %>
    <% end %>
  </div>
</section>
