<div
  class="bg-gray-50 rounded-xl shadow-inner p-6 mb-6"
  data-controller="quiz"
      data-quiz-totalquiz-value="<%= @total_quiz - 1 %>"
      data-quiz-currentquiz-value="<%= start_quiz %>"
  >
  <h3 class="text-xl font-semibold text-gray-700 mb-4"><%= quiz["question"].capitalize  %></h3>
<form class="space-y-4">
  <% @quiz["options"].each do | option | %>
  <label class="flex items-center space-x-3">
    <input 
      type="radio" 
      name="quizs" 
      value="<%= option  %>" 
      class="check_selected" 
      data-action="change->quiz#toggle"
    />
    <span class="text-gray-600"><%= option.capitalize %></span>
  </label>
<% end  %>
</form>
</div>
