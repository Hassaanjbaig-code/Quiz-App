<section
  class="flex w-full items-center justify-center min-h-screen bg-gradient-to-br from-blue-50 to-purple-50 p-4">
  <div class="max-w-xl w-full bg-white rounded-2xl shadow-lg p-8 flex flex-col space-y-6">

    <!-- Header -->
    <h1 class="text-4xl md:text-5xl font-extrabold text-gray-800 text-center">Start Quiz</h1>
    <p class="text-center text-gray-500 text-lg">Enter your custom quiz questions or notes below to begin.</p>

    <!-- Form -->
    <%= form_with url: quizs_create_path, method: :post, local: true do | form | %>
      <%= form.label "Your Quiz Content",
     class: "block text-lg font-semibold text-gray-700" 
    %>
      <%= form.text_area :question,
        id: "quiz_textarea",
        class: "resize-none h-40 p-4 w-full border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-400",
        placeholder: "Write your quiz prompt or notes here..."
      %>
      <!-- Start Button -->
      <%= form.submit "Start Now",
        class: "w-full bg-purple-600 hover:bg-purple-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-300"
    %>
      <% end %>
    
  </div>
</section>

