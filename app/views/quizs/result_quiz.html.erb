<section 
  class="flex w-full items-center justify-center min-h-screen bg-gradient-to-br from-blue-50 to-purple-50 p-4"> 
  >
  <div class="max-w-xl w-full bg-white rounded-2xl shadow-lg p-6 flex flex-col">
    <div class="bg-gray-50 rounded-xl shadow-inner p-6 mb-6 text-center">
      <h2 class="text-2xl font-bold text-purple-700 mb-4">Quiz Results</h2>

      <div class="flex justify-center items-center space-x-6 mb-6">
        <div class="bg-white shadow rounded-lg p-4 w-32">
          <p class="text-gray-500 text-sm">Total Questions</p>
          <p class="text-xl font-semibold text-gray-800"><%= @total_quiz %></p>
        </div>
        <div class="bg-white shadow rounded-lg p-4 w-32">
          <p class="text-gray-500 text-sm">Correct</p>
          <p class="text-xl font-semibold text-green-600"><%= @final_result %></p>
        </div>
        <div class="bg-white shadow rounded-lg p-4 w-32">
          <p class="text-gray-500 text-sm">Incorrect</p>
          <p class="text-xl font-semibold text-red-500"><%= @incorrect_quiz %></p>
        </div>
      </div>

      <div class="relative pt-1 mb-6">
        <div class="flex mb-2 items-center justify-between">
          <span class="text-sm font-medium text-purple-700">Score</span>
          <span class="text-sm font-medium text-purple-700"><%= @score_percentage %>%</span>
        </div>
        <div class="overflow-hidden h-4 mb-4 text-xs flex rounded bg-purple-200">
          <div style="width: <%= @score_percentage %>%;" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-purple-500"></div>
        </div>
      </div>

      <button
        class="mt-4 px-6 py-2 bg-purple-600 hover:bg-purple-700 text-white font-semibold rounded-full transition"
        onclick="location.href='/'"
      >
        Retake Quiz
      </button>
    </div>
  </div>
</section>
